            return false;
        }
        else {
            var elegibleCertificate = {
                Certificate_No: Certificate_No,
                Date: Date,
                Army_No: ArmyNo
            };
            $.ajax({
                type: 'POST',
                url: '@Url.Action("ECSubmit", "ESM")',
                data: { elegibleCertificate },
